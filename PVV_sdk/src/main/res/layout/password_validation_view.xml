<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".PasswordValidationView"
    android:baselineAligned="false">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="@dimen/symbol_layout_padding">

          <TextView
              android:id="@+id/lower_case_symbol"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/a"
              android:textColor="@color/gray"
              android:textSize="30sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

          <TextView
              android:id="@+id/lower_case_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/lowercase"
              android:textColor="@color/gray"
              android:textStyle="bold"
              android:textSize="@dimen/symbol_desc_size"
              android:gravity="center_horizontal"
              style="@style/TwoLinerTextViewResizableStyle"/>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="@dimen/symbol_layout_padding">

          <TextView
              android:id="@+id/upper_case_symbol"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/A"
              android:textColor="@color/gray"
              android:textSize="30sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

          <TextView
              android:id="@+id/upper_case_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/uppercase"
              android:textColor="@color/gray"
              android:textStyle="bold"
              android:textSize="@dimen/symbol_desc_size"
              android:gravity="center_horizontal"
              style="@style/TwoLinerTextViewResizableStyle"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="@dimen/symbol_layout_padding">

          <TextView
              android:id="@+id/digits_symbol"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/_0_9"
              android:textColor="@color/gray"
              android:textSize="30sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

          <TextView
              android:id="@+id/digits_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/digits"
              android:textColor="@color/gray"
              android:textStyle="bold"
              android:textSize="@dimen/symbol_desc_size"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="@dimen/symbol_layout_padding">

          <TextView
              android:id="@+id/special_char_symbol"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/special_char"
              android:textColor="@color/gray"
              android:textSize="30sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

          <TextView
              android:id="@+id/special_char_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/special"
              android:textColor="@color/gray"
              android:textStyle="bold"
              android:textSize="@dimen/symbol_desc_size"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

     </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="@dimen/symbol_layout_padding">


          <TextView
              android:id="@+id/length_symbol"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/_min_char"
              android:textColor="@color/gray"
              android:textSize="30sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>

          <TextView
              android:id="@+id/length_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/length"
              android:textColor="@color/gray"
              android:textStyle="bold"
              android:textSize="@dimen/symbol_desc_size"
              android:gravity="center_horizontal"
              style="@style/OneLinerTextViewResizableStyle"/>
     </LinearLayout>








</LinearLayout>









